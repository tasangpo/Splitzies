<!DOCTYPE html>
<html>
  <head>
    <title>Splitzies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script type='text/javascript'>
      window.logo = '<%= image_url('logo.png')%>'
      window.splash = '<%= image_url('splash.png')%>'
      window.splash1 = '<%= image_url('splash1.png')%>'
      window.splash2 = '<%= image_url('splash2.png')%>'
      window.splash3 = '<%= image_url('splash3.png')%>'
      window.splash4 = '<%= image_url('splash4.png')%>'
      window.splash5 = '<%= image_url('splash5.png')%>'
      window.appStore = '<%= image_url('app_store.png')%>'
      window.googlePlay = '<%= image_url('google_play.png')%>'
    </script>


    <%= stylesheet_link_tag 'application', media: 'all' %>
